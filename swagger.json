            "maxLength" : 255
          },
          "pais" : {
            "type" : "object",
            "description" : "País de la ubicación",
            "properties" : {
              "nombre" : {
                "type" : "string",
                "example" : "COLOMBIA",
                "description" : "Nombre del país"
