          },
          "ubicacionInterna" : {
            "type" : "string",
            "description" : "Indica cuál es el asiento o puesto dentro del evento"
          }
        },
        "required" : [ "id", "fecha", "ubicacionGeografica" ]
      },
      "UbicacionGeografica" : {
        "description" : "Ubicación geográfica",
        "type" : "object",
        "properties" : {
          "latitud" : {
            "type" : "number",
            "format" : "float",
            "description" : "Coordenada que indica la latitud de la ubicación"
          },
          "longitud" : {
            "type" : "number",
            "format" : "float",
            "description" : "Coordenada que indica la longitud de la ubicación"
          },
          "calle" : {
            "type" : "string",
            "description" : "Indica la dirección física de un sitio",
