              "ciudad" : {
                "type" : "object",
                "description" : "Ciudad dentro del país",
                "properties" : {
                  "nombre" : {
                    "type" : "string",
                    "example" : "BOGOTA",
                    "description" : "Nombre de la ciudad"
                  },
                  "codigo" : {
                    "type" : "integer",
                    "example" : 11001,
                    "description" : "Código de la ciudad"
                  },
                  "localidad" : {
                    "type" : "object",
                    "description" : "Localidad, barrio o región",
                    "properties" : {
                      "nombre" : {
                        "type" : "string",
                        "example" : "SAN JOSE",
                        "description" : "Nombre de la localidad"
                      },
                      "codigo" : {
                        "type" : "integer",
                        "example" : 1100123,
                        "description" : "Código de la localidad"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "Trayecto" : {
        "description" : "Indica los puntos de inicio y fin de un trayecto",
        "type" : "object",
        "properties" : {
          "origen" : {
            "$ref" : "#/components/schemas/UbicacionGeografica"
          },
          "destino" : {
            "$ref" : "#/components/schemas/UbicacionGeografica"
          },
          "orden" : {
            "type" : "integer",
            "default" : 1,
            "description" : "Indica el orden de un trayectp, el número incremental indica cual debe ser el orden de la ruta a seguir.",
            "example" : 1,
            "minimum" : 1
          }
        },
        "required" : [ "origen", "destino", "orden" ]
      },
      "Moneda" : {
        "title" : "Moneda",
        "type" : "object",
        "description" : "Descripción de la moneda a usar para asociar a un monto",
        "properties" : {
          "tipo" : {
            "type" : "string",
            "default" : 3,
            "description" : "Tipo de moneda asociada al monto",
